class StudentNode:
    def __init__(self, roll, name, dept, cgpa):
        self.roll = roll
        self.name = name
        self.dept = dept
        self.cgpa = cgpa
        self.next = None
class StudentRecordSystem:
    def __init__(self):
        self.head = None
    # Add a student at end
    def add_student(self, roll, name, dept, cgpa):
        new_node = StudentNode(roll, name, dept, cgpa)
        if not self.head:
            self.head = new_node
        else:
            temp = self.head
            while temp.next:
                temp = temp.next
            temp.next = new_node
        print(f"‚úÖ Student {name} added.")
    # Delete student by roll
    def delete_student(self, roll):
        temp = self.head
        prev = None
        while temp:
            if temp.roll == roll:
                if prev:
                    prev.next = temp.next
                else:
                    self.head = temp.next
                print(f"üóëÔ∏è Student with Roll {roll} deleted.")
                return
            prev = temp
            temp = temp.next
        print("‚ùå Student not found.")
    # Search student by roll
    def search_student(self, roll):
        temp = self.head
        while temp:
            if temp.roll == roll:
                print(f"üéØ Found -> Roll: {temp.roll}, Name: {temp.name}, Dept: {temp.dept}, CGPA: {temp.cgpa}")
                return
            temp = temp.next
        print("‚ùå Student not found.")
    # Display all students
    def display_students(self):
        if not self.head:
            print("No records found.")
            return
        print("\n--- Student Records ---")
        temp = self.head
        while temp:
            print(f"Roll: {temp.roll}, Name: {temp.name}, Dept: {temp.dept}, CGPA: {temp.cgpa}")
            temp = temp.next
# ----------- Menu Driven Program -----------
if __name__ == "__main__":
    system = StudentRecordSystem()
    while True:
        print("\n--- Student Record Management ---")
        print("1. Add Student")
        print("2. Delete Student")
        print("3. Search Student")
        print("4. Display Students
        print("5. Exit")
        choice = input("Enter choice: ")
        if choice == "1":
            roll = input("Enter Roll Number: ")
            name = input("Enter Name: ")
            dept = input("Enter Department: ")
            cgpa = input("Enter CGPA: ")
            system.add_student(roll, name, dept, cgpa)
        elif choice == "2":
            roll = input("Enter Roll Number to delete: ")
            system.delete_student(roll)
        elif choice == "3":
            roll = input("Enter Roll Number to search: ")
            system.search_student(roll)
        elif choice == "4":
            system.display_students()
        elif choice == "5":
            print("Exiting... ‚úÖ-----THANKYOU------")
            break
        else:
            print("‚ùå Invalid choice.")
